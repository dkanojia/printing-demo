div(id='{$_name}' class="{$class} row" style="{$style}")
  {item_count_wrapper}
  div.row.item-count-container
    div.col-md-9.col-sm-9.category-name
      p {$category_name}{$designer_name}
    div.col-md-3.col-sm-3.item-count.text-right
      p {$item_count}
  {/}
  {rows}{row}
  .col-md-3.col-sm-6
    {$micro_data}
    .product-item.xepan-commerce-item(data-xsnb-item-id='{$id}', onclick='javascript:void(0);')
      {image_wrapper}
      .product-thumb.xepan-commerce-image-wrapper
        a.xepan-commerce-image-anchor(href='{$item_detail_page_url_via_image}')
          img.xepan-commerce-item-img(src='{first_image}abc{/}')
      {/image_wrapper}
      //- product-thum
      .product-content
        {name_wrapper}
        h5
          a(href='{item_detail_page_url_via_name}{/}') {$name}
        {/}
        {sale_price_wrapper}
        span.price {$sale_price}
        {/}
        {original_price_wrapper}
        span.price {$original_price}
        {/}
        {shipping_charge_wrapper}
        span.price {$shipping_charge}
        {/}
        {description_wrapper}
        p {$description}
        {/}
        {specification_wrapper}
        .xepan-commerce-tool-item-specification
          {specification}
          {rows}{row}
          .row
            .col-md-6.col-sm-6.col-xs-12
                {$name}
            .col-md-6.col-sm-6.col-xs-12
                {$value}
          {/}{/}
          {/specification}
        {/}
        {personalizedbtn_wrapper}
        div(data-xsnbitemid="{$id}" class="commerce-personalize-button-wrapper")
            {$personalizedbtn}
        {/}
        {addtocart_wrapper}
        .xepan-commerce-item-addtocart(data-xsnbitemid="{$id}" data-name="{$name}"){$Addtocart}
        {/}
      //- product-content
  {/}{/}
  //- product-item
  {not_found}
  div.full-width.alert.alert-warning(role="alert")
      strong.glyphicon.glyphicon-warning-sign &nbsp;Warning!
          span &nbsp;{$not_found_message}
  {/}
  {paginator_wrapper}
  .xepan-commerce-item-paginator(style='float:none; clear:both')
      {$Paginator}
  {/}

  style.
    
    .xepan-commerce-item-paginator{
        margin-top:10px;
        width:99%; 
        border: 1px solid #dadde0;
    }

    .xepan-commerce-item-paginator > div{
        padding: 0.5em !important;
        border-radius: 0px !important;
        width: 100%;
        text-align:center;
        margin:0 auto 0px auto !important;
    }

    .xepan-commerce-item-paginator a{
        border: 1px solid #A2D9F6;
        border-radius: 3px !important;
        font-weight: bold;
        padding: 4px 10px 4px 10px !important;
    }
    .xepan-commerce-item-paginator a.ui-state-active {
        color:red !important;
    }
